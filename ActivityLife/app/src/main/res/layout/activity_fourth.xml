<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walmart.activitylife.FourthActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/third"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/third"
        app:layout_constraintStart_toStartOf="@+id/second"
        app:layout_constraintTop_toBottomOf="@+id/second" />

    <Button
        android:id="@+id/first"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/second"
        app:layout_constraintStart_toStartOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/first" />

    <Button
        android:id="@+id/fourth"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fourth"
        app:layout_constraintStart_toStartOf="@+id/third"
        app:layout_constraintTop_toBottomOf="@+id/third" />
</android.support.constraint.ConstraintLayout>
