<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pasc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragActivity">

    <FrameLayout
        android:id="@+id/frameCont"
        android:layout_width="0dp"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/addA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addA"
        app:layout_constraintStart_toStartOf="@+id/frameCont"
        app:layout_constraintTop_toBottomOf="@+id/frameCont" />

    <Button
        android:id="@+id/addb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="AddB"
        app:layout_constraintBaseline_toBaselineOf="@+id/removeA"
        app:layout_constraintStart_toEndOf="@+id/addA" />

    <Button
        android:id="@+id/removeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remA"
        app:layout_constraintStart_toEndOf="@+id/addb"
        app:layout_constraintTop_toBottomOf="@+id/frameCont" />

    <Button
        android:id="@+id/remB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="REMB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameCont" />

    <Button
        android:id="@+id/replaceb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="RePB"
        app:layout_constraintBaseline_toBaselineOf="@+id/replacea"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/replacea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:text="REPA"
        app:layout_constraintStart_toEndOf="@+id/replaceb"
        app:layout_constraintTop_toBottomOf="@+id/addb" />
</android.support.constraint.ConstraintLayout>