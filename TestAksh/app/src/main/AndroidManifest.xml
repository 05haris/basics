<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tecmax.testaksh">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_abhi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_abhi_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".example.MainActivity" />
        <activity
            android:name=".example.TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".default_templets.FaceActivity"
            android:label="@string/title_activity_face" />
        <activity
            android:name=".example.TecmaxLauncherActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme"/>
        <activity android:name=".example.LinearExActivity" />
        <activity
            android:name=".default_templets.BasicActivity"
            android:label="@string/title_activity_basic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".default_templets.FullscreenExActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_ex"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".default_templets.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".default_templets.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".default_templets.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".default_templets.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tecmax.testaksh.default_templets.ItemListActivity" />
        </activity>
        <activity
            android:name=".default_templets.NavActivity"
            android:label="@string/title_activity_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".default_templets.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".default_templets.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".default_templets.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".example.WidgetActivity" />
        <activity android:name=".widg.SeekbarActivity" />
        <activity android:name=".widg.AmazonActivity" />
        <activity android:name=".example.ChromeActivity" />
        <activity
            android:name=".default_templets.BottomActivity"
            android:label="@string/title_activity_bottom" />
        <activity
            android:name=".example.WhatsTabActivity"
            android:label="@string/title_activity_whats_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>