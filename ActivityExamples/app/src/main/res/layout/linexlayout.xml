<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ak_til_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <EditText
                android:id="@+id/ak_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FirstName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ak_til_lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <EditText
                android:id="@+id/ak_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="LastName" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ak_til_password"
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ak_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="numberPassword" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/ak_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Forget Password ?" />

    <Button
        android:id="@+id/ak_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="@color/white" />
</LinearLayout>
